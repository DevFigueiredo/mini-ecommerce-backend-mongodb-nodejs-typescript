{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["ES6", "dom"],
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types", "./src/@types"]
}
