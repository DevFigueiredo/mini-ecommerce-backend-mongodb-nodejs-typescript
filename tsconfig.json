{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./out",
    "rootDir": "./src",
    "lib": ["ES6", "dom"],
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types", "./src/@types"]
}
